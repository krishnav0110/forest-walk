{
    "windows": {
        "options": {
            "shell": {
                "executable": "cmd.exe",
                "args": [
                    "@echo off",
                    "/C",
                    "\"E:/Apps/visualstudio/BuildTools/VC/Auxiliary/Build/vcvarsall.bat\"",
                    "x64",
                    "&&"
                ]
            }
        }
    },
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: cl.exe build active project",
            "command": "cl.exe",
            "args": [
                "/std:c++17",
                "/Zi",
                "/EHsc",
                "/nologo",
                "/Fo${workspaceFolder}\\build\\obj\\",
                "/Fe${workspaceFolder}\\build\\${workspaceFolderBasename}.exe",
                "/Fd${workspaceFolder}\\build\\${workspaceFolderBasename}.pdb",
                "${workspaceFolder}\\src\\*.cpp",
                "/I${workspaceFolder}\\include",
                "/I${workspaceFolder}\\lib\\include",
                "/link",
                "/LIBPATH:${workspaceFolder}\\lib\\lib",
                "/SUBSYSTEM:CONSOLE",
                "shell32.lib",
                "opengl32.lib",
                "glew/glew32.lib",
                // "sfml-main.lib",
                "SFML/sfml-system.lib",
                "SFML/sfml-window.lib",
                "SFML/sfml-graphics.lib",
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}